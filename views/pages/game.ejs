<!DOCTYPE html>
<html>
<head>
  <% include ../partials/lcheader.ejs %>
  <link rel="stylesheet" type="text/css" href = "css/games.css">

</head>

<body>

  <% include ../partials/lcnav.ejs %>
  <div class = "container-fluid">
  	<!-- Outside the column, maybe just game #? <br><br> -->
  	<div class = "row">
  		<div class = "col-md-7 pre-scrollable col-md-offset-1" id= "game">
  			<table class="currentgame" width = "100%">
  				<thead>
  					<tr>
  						<th><h2>Game </h2></th>
  						<th><h2>Opponent</h2></th>
  						<th><h2>Resume</h2></th>
  					</tr>
  				</thead>
  				<tbody>
  					<% for(var i=0; i<20; i++) {%>
			  			 <tr>
			  			 	<td><h3><%= i%></h3></td>
			  			 	<td><h3>Enemy</h3></td>
			  			 	<td>
			  			 		<button type="button" class="btn btn-success btn-lg">Resume game</button>
			  			 	</td>
			  			 </tr>
					<% } %>
  				</tbody>
  			</table>
